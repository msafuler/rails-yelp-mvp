<%= render './navbar' %>

<div class="col-8">
  <%= form_for(@restaurant) do |f| %>
    <div class="form">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="form">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>
    <div class="form">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>
    </div>
    <div class="form">
      <%= f.label :category %>
      <%= f.select :category, ["", "chinese", "italian", "japanese", "french", "belgian"] %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
